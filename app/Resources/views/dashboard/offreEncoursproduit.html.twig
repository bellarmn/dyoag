{% extends '/dashboard/index.html.twig' %}

{% block  haut %}  
  {% endblock  haut %}
    {% block  corps %}
        
        {% block  corpstitre %} <p style="font-style: italic;font-size: 14px;text-align: left;"> <a href="{{ path('dashboard_index')}}">/ Dashboard </a> <a href="{{ path('dashborad_offreEncoursproduit', {'id': id })}}">/ Offres en cours du produit : <span style="color: black;font-weight: bold;font-size: 17px;"> {{ product.name }} </span> <span style="color: red;font-weight: bold;font-size: 12px;"> ({{ count }}) </span> </a></p>   {% endblock  corpstitre %}
        {% set nbre=0 %}
        {% for element in demands %}
            
        <div class="col-md-4 " style="margin-bottom: 2%;">
            <div class="stats-left" >
                <h6 style="text-align: left;"> 
                    <a href="#" style="color: white;text-decoration: none;">
                       <i class="fa fa-cube" ></i>  Offre: {{ element.quantite|number_format(0, ',', '.') }} {{ element.measure.name }}  —  PU  :  {{ element.prixUnit|number_format(0, ',', '.') }}  F CFA
                    </a>
                    <br/><br/>
                    <a href="#" style="color: white;text-decoration: none;font-style: normal;">
                        <i class="fa fa-calendar" ></i>  Du  :   {{ element.createAt|date('d/m/Y') }} — {% if element.available ==0 %} Résolu {% else %} {% if element.published ==1 %} Publié {% else %}  Brouillon {% endif %} {% endif %}
                    </a>
                    <br/><br/>
                    <a href="#" style="color: white;text-decoration: none;font-style: normal;">
                       {{ element.district.city.province.name }}/{{ element.district.city.name }}/{{ element.district.name }}/{{ element.lieu }} 
                    </a>
                    <br/><br/>
                    
                    {% set qte=0 %}{% set nbre=0%}
                     {% for souscrptions in element.orders %}
                         {% set nbre=nbre+1 %}
                         {% set qte=qte+souscrption.quantites %}
                      {% endfor %}
                      <a href="#" title="souscriptions et disponibilité" style="color: cyan;text-decoration: none;">
                        <i class="fa-comments-o"></i> : {{ nbre }} —  Restante  : {{ (element.quantite-qte)|number_format(0, ',', '.') }} {{ element.measure.name }} 
                    </a>
                    
                </h6>
                <img src="{{ asset('uploads/images/products/')}}{{ element.imageName }}" style="width:150px;height: 120px;" class="img img-circle"   />

                <h6 style="margin-bottom: -1px;color: white;">Postée par : {{ element.user.lastName }} {{ element.user.firstName }} <br/><br/>
                    <a href="#" style="color: yellow;text-decoration: none;font-style: normal;">
                        <i class="fa fa-phone" ></i>  {{ element.user.phone }} —  {{ element.user.email }} 
                    </a><br/> <br/>
                    <a href="#" title="Souscrire" style="font-size: 14px;text-align: center;color: cyan;">
                        <i class="fa fa-cogs" ></i> 
                         </a>
                <a href="#" title="Imprimer" style="font-size: 14px;text-align: center;color: cyan;margin-left: 10px;">
                        <i class="fa fa-file-pdf-o" ></i> 
                         </a>
                </h6>

            </div>
        </div>
    {% endfor %}
{% endblock  corps %}
